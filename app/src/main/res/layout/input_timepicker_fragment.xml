<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

<TimePicker
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/input_timepicker"
    android:layout_centerHorizontal="true"
    android:contentDescription="Timepicker Control"/>
    <TextView
        android:layout_marginTop="@dimen/small_margin"
        android:layout_below="@id/input_timepicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input_time_display"
        style="@style/ADFLargeHeadline"
        android:contentDescription="Timepicker Display"/>
</RelativeLayout>