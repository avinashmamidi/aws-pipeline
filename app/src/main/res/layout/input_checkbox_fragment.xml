<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mid_margin"
        android:text="@string/check_box_text"
        android:layout_centerHorizontal="true"
        android:id="@+id/input_checkbox"
        android:contentDescription="Checkbox Control"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_checkbox"
        android:text="@string/placeholder"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/mid_margin"
        android:textSize="@dimen/mid_font_size"
        android:id="@+id/input_checkbox_status"
        android:contentDescription="Checkbox Display"/>
</RelativeLayout>