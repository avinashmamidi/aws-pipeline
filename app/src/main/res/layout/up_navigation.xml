<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/toolbar" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/up_navigation_content_text"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="@dimen/mid_margin"
        android:text="@string/back_navigation_message"
        style="@style/ADFLargeHeadline"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/up_navigation_content_text"
        android:layout_marginTop="@dimen/mid_margin"
        android:id="@+id/nested_up_button"
        android:text="@string/nested_button"
        style="@style/ADFButton.Center_Horizontal"/>

</RelativeLayout>